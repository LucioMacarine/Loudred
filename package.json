{
  "name": "loudred-bot",
  "version": "1.0.0",
  "description": "A Discord sound player",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc; npx lessc window/index.less window/index.css; npx lessc window/boots.less window/boots.css",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "author": {
    "email": "1342952LucioMacarine@protonmail.com",
    "name": "LÃºcio Macarine",
    "url": "https://github.com/LucioMacarine"
  },
  "homepage": "https://github.com/LucioMacarine/Loudred",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^22.0.0",
    "less": "^4.1.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@discordjs/voice": "^0.14.0",
    "discord.js": "^14.7.1",
    "sodium-native": "^3.4.1",
    "yt-dlp-wrap-plus": "^2.3.16"
  },
  "build": {
    "appId": "com.loudred.bot",
    "productName": "Loudred Bot",
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "publish": "github"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "pacman",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "synopsis": "A discord sound player",
      "category": "Audio",
      "publish": "github"
    },
    "pacman": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    },
    "deb": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    },
    "rpm": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    }
  }
}
