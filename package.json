{
  "name": "loudred-bot",
  "version": "1.0.0",
  "description": "A Discord sound player",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc; npx lessc window/index.less window/index.css",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "author": {
    "email": "94476320+Lucius-Macarini@users.noreply.github.com",
    "name": "Lucius Macarini",
    "url": "https://github.com/Lucius-Macarini"
  },
  "homepage": "https://github.com/Lucius-Macarini/Loudred",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node-fetch": "^2.6.2",
    "electron": "^22.0.0",
    "less": "^4.1.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@discordjs/voice": "^0.14.0",
    "discord.js": "^14.7.1",
    "filereader": "^0.10.3",
    "node-fetch": "^2.6.9",
    "peerjs": "^2.0.0-beta.3",
    "sodium": "^3.0.2",
    "wrtc": "^0.4.7",
    "ws": "^8.12.0"
  },
  "build": {
    "appId": "com.loudred.bot",
    "productName": "Loudred Bot",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "pacman",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "synopsis": "A discord sound player",
      "category": "Audio"
    },
    "pacman": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    },
    "deb": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    },
    "rpm": {
      "depends": [
        "yt-dlp",
        "ffmpeg"
      ],
      "packageName": "loudred"
    }
  }
}
